      <ImageView fitHeight="25.0" fitWidth="28.0" layoutX="245.0" layoutY="476.0">
         <image>
            <Image url="@../assets/png-clipart-computer-icons-email-attachment-open-symbol-symbol-miscellaneous-text.png" />
